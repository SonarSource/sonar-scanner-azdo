{
    "id": "9F57024B-31F9-4E58-9E39-A47CCC098F03",
    "name": "SonarQubeScannerCli",
    "friendlyName": "Scanner CLI",
    "description": "Perform a SonarQube or SonarCloud analysis of the source code of your PHP, JavaScript... projects",
    "helpMarkDown": "[More Information](http://redirect.sonarsource.com/doc/install-configure-scanner-tfs-ts.html)",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "author": "sonarsource",
    "version":  {
        "Major": 4,
        "Minor": 0,
        "Patch": 0
    },
    "releaseNotes": "Moved to Node implementation. Supports SonarCloud endpoints.",
    "demands": [
        "java"
    ],
    "minimumAgentVersion": "1.95.1",
    "instanceNameFormat": "Analyze on $(endpointType)",
    "groups": [
        {
            "name": "serverSettings",
            "displayName": "Server",
            "isExpanded": true
        },
        {
            "name": "analysisSettings",
            "displayName": "Analysis Settings",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "endpointType",
            "type": "radio",
            "label": "Server Type",
            "defaultValue": "SonarCloud",
            "required": true,
            "helpMarkDown": "Use SonarCloud or SonarQube endpoint connection.",
            "options": {
                "SonarCloud": "SonarCloud",
                "SonarQube": "SonarQube"
            },
            "groupName": "serverSettings"
        },
        {
            "name": "SonarCloud",
            "type": "connectedService:sonarcloud",
            "label": "SonarCloud Service Endpoint",
            "required": true,
            "helpMarkDown": "Select the SonarCloud endpoint for your project. To create one, click the Manage link and create a new SonarCloud Service Endpoint, enter your organization and token.",
            "visibleRule": "endpointType = SonarCloud",
            "groupName": "serverSettings"
        },
        {
            "name": "organization",
            "type": "pickList",
            "label": "Organization",
            "required": true,
            "helpMarkDown": "Select the name of your Organization",
            "properties": {
                "EditableOptions": "True"
            },
            "visibleRule": "endpointType = SonarCloud",
            "groupName": "serverSettings"
        },
        {
            "name": "SonarQube",
            "type": "connectedService:sonarqube",
            "label": "SonarQube Server Endpoint",
            "required": true,
            "helpMarkDown": "The SonarQube Server Endpoint. To create one, click the Manage link and create a new SonarQube Server Endpoint, enter your server url and token.",
            "visibleRule": "endpointType = SonarQube",
            "groupName": "serverSettings"
        },
        {
            "name": "configMode",
            "type": "radio",
            "label": "Mode",
            "defaultValue": "file",
            "required": true,
            "helpMarkDown": "Choose your preferred configuration method",
            "options": {
                "file": "Store configuration with my source code (sonar-project.properties)",
                "manual": "Manually provide configuration"
            },
            "groupName": "analysisSettings"
        },
        {
            "name": "configFile",
            "type": "filePath",
            "defaultValue": "sonar-project.properties",
            "label": "Settings File",
            "required": false,
            "helpMarkDown": "More information is available [here](http://redirect.sonarsource.com/doc/install-configure-scanner-tfs-ts.html)",
            "groupName": "analysisSettings",
            "visibleRule": "configMode = file"
        },
        {
            "name": "projectKey",
            "type": "string",
            "label": "Project Key",
            "required": true,
            "helpMarkDown": "The SonarQube project unique key, i.e. `sonar.projectKey`",
            "groupName": "analysisSettings",
            "visibleRule": "configMode = manual"
        },
        {
            "name": "projectName",
            "type": "string",
            "label": "Project Name",
            "required": false,
            "helpMarkDown": "The SonarQube project name, i.e. `sonar.projectName`",
            "groupName": "analysisSettings",
            "visibleRule": "configMode = manual"
        },
        {
            "name": "projectVersion",
            "type": "string",
            "label": "Project Version",
            "defaultValue": "1.0",
            "required": false,
            "helpMarkDown": "The SonarQube project version, i.e. `sonar.projectVersion`",
            "groupName": "analysisSettings",
            "visibleRule": "configMode = manual"
        },
        {
            "name": "sources",
            "type": "string",
            "label": "Sources",
            "defaultValue": ".",
            "required": true,
            "helpMarkDown": "Comma-separated paths to directories containing source files, this value is set to the `sonar.sources` SonarQube property",
            "groupName": "analysisSettings",
            "visibleRule": "configMode = manual"
        },
        {
            "name": "extraProperties",
            "type": "multiLine",
            "label": "Additional Properties",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "One key=value per line.",
            "groupName": "advanced"
        }
    ],
    "dataSourceBindings": [
        {
          "target": "organization",
          "endpointId": "$(SonarCloud)",
          "dataSourceName": "MyOrganizations"
        }
    ],
    "execution": {
        "Node": {
            "target": "scanner-cli.js"
        }
    }
}
