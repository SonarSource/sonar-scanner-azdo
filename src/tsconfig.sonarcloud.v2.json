    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017", "DOM"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": ".",
    "outDir": "../build/ts"
  },
  "include": [
    "common/sonarcloud-v2/**/*.ts",
    "extensions/sonarcloud/tasks/*/v2/**/*.ts"
  ]
}
