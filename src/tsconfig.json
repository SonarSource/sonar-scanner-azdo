    "lib": [ "es2017", "DOM" ],    
    "noUnusedLocals": true,  
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node" ,
    "rootDir": "./",
    "baseUrl": ".",
