{
  "id": "sonarcloud_vsBuild_template",
  "name": ".NET Desktop with SonarCloud",
  "canDelete": false,
  "category": "Build",
  "iconTaskId": "ce096e50-6155-4de8-8800-4221aaeed4a1",
  "defaultHostedQueue": null,
  "description": "Build and run tests for .NET Desktop or Windows Classic Desktop solutions, and analyze with SonarCloud. This template requires that Visual Studio be installed on the build agent.",
  "template": {
    "build": [
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "displayName": "Use NuGet 4.4.1",
        "timeoutInMinutes": 0,
        "task": {
          "id": "2c65196a-54fd-4a02-9be8-d9d1837b7c5d",
          "versionSpec": "0.*",
          "definitionType": "task"
        },
        "inputs": {
          "versionSpec": "4.4.1",
          "checkLatest": "false"
        }
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "task": {
          "id": "333b11bd-d341-40d9-afcf-b32d5ce6f23b",
          "versionSpec": "2.*",
          "definitionType": null
        },
        "inputs": {
          "command": "restore",
          "solution": "$(Parameters.solution)",
          "selectOrConfig": "select",
          "includeNuGetOrg": "true"
        }
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "task": {
          "id": "14d9cde6-c1da-4d55-aa01-2965cd301255",
          "versionSpec": "1.*",
          "definitionType": "task"
        },
        "inputs": {
          "scannerMode": "MSBuild"
        }
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "task": {
          "id": "71a9a2d3-a98a-4caa-96ab-affca411ecda",
          "versionSpec": "1.*",
          "definitionType": null
        },
        "inputs": {
          "solution": "$(Parameters.solution)",
          "platform": "$(BuildPlatform)",
          "configuration": "$(BuildConfiguration)",
          "restoreNugetPackages": "false"
        }
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "task": {
          "id": "ef087383-ee5e-42c7-9a53-ab56c98420f9",
          "versionSpec": "2.*",
          "definitionType": null
        },
        "inputs": {
          "testAssemblyVer2": "**\\$(BuildConfiguration)\\*test*.dll\n!**\\obj\\**",
          "platform": "$(BuildPlatform)",
          "configuration": "$(BuildConfiguration)",
          "codeCoverageEnabled": "true"
        }
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "condition": "succeeded()",
        "task": {
          "id": "ce096e50-6155-4de8-8800-4221aaeed4a1",
          "versionSpec": "1.*",
          "definitionType": "task"
        },
        "inputs": {}
      },
      {
        "environment": {},
        "enabled": true,
        "continueOnError": false,
        "alwaysRun": false,
        "timeoutInMinutes": 0,
        "condition": "succeeded()",
        "task": {
          "id": "38b27399-a642-40af-bb7d-9971f69712e8",
          "versionSpec": "1.*",
          "definitionType": "task"
        },
        "inputs": {}
      }
    ],
    "options": [
      {
        "enabled": true,
        "definition": { "id": "5d58cc01-7c75-450c-be18-a388ddb129ec" },
        "inputs": {}
      }
    ],
    "variables": {
      "system.debug": {
        "value": "false",
        "allowOverride": true
      },
      "BuildConfiguration": {
        "value": "release",
        "allowOverride": true
      },
      "BuildPlatform": {
        "value": "any cpu",
        "allowOverride": true
      }
    },
    "buildNumberFormat": "$(date:yyyyMMdd)$(rev:.r)",
    "jobAuthorizationScope": "projectCollection",
    "processParameters": {
      "inputs": [
        {
          "name": "solution",
          "label": "Solution",
          "defaultValue": "**\\*.sln",
          "required": true,
          "type": "filePath",
          "helpMarkDown": "The path to the Visual Studio solution file or NuGet packages.config. Wildcards can be used.  For example, `**\\\\*.sln` for all sln files in all sub folders."
        }
      ]
    }
  }
}